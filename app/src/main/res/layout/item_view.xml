<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_corner"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/titleoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:text="Titulo" />

    <TextView
        android:id="@+id/descriptionoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleoutput"
        android:textSize="14dp"
        android:textColor="#312E2E"
        tools:text="DescripciÃ³n" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeoutput"
        android:layout_below="@id/descriptionoutput"
        android:textSize="14dp"
        android:textColor="#312E2E"
        tools:text="1/1/2020 "/>

    <TextView
        android:id="@+id/statusoutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeoutput"
        android:layout_marginTop="1dp"
        android:textColor="#000000"
        android:textSize="14dp"
        android:gravity="right"
        android:paddingRight="12dp"
        tools:text="Hecho" />

</RelativeLayout>